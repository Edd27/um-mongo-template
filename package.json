{
  "name": "nodejs-template",
  "version": "1.0.0",
  "type": "module",
  "description": "Template for the projects developed in the Node.JS.",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "lint": "eslint src/**/*.js --fix",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "postinstall": "npm run prepare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edd27/nodejs-template.git"
  },
  "author": {
    "name": "Edgar Benavides",
    "email": "contacto@edevsoft.com",
    "url": "https://edevsoft.com"
  },
  "license": "MIT",
  "devDependencies": {
    "eslint": "8.20.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.2.4",
    "eslint-plugin-promise": "6.0.0",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "nodemon": "2.0.19",
    "prettier": "2.7.1"
  },
  "imports": {
    "#Lib/*": "./src/lib/*"
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.{js,md}": "prettier --write"
  },
  "bugs": {
    "url": "https://github.com/Edd27/nodejs-template/issues"
  },
  "homepage": "https://github.com/Edd27/nodejs-template#readme"
}
